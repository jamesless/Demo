<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sfpay.airscape.server.dao.LoginInfoDao">
	<resultMap id="loginInfoMap" type="com.sfpay.airscape.server.vo.LoginInfo">
		<id column="ID" property="id" />
		<result column="USER_NAME" property="userName" />
		<result column="LOG_TIME" property="logTime" />
		<result column="LAST_TIME" property="lastTime" />
	</resultMap>

	<select id="query" parameterType="String" resultMap="loginInfoMap">
		SELECT * from LOGIN_INFO	
		where 
		ID=#{id}
	</select>

	<insert id="add" parameterType="LoginInfo">
		insert into
		LOGIN_INFO(
			USER_NAME,
			LOG_TIME,
			LAST_TIME
		)
		values(
			#{userName},
			now(),
			now()
		)
	</insert>

	<update id="update" parameterType="LoginInfo">
		update LOGIN_INFO set
			LAST_TIME=now()
		where
			ID=#{id}
	</update>

	<delete id="delete" parameterType="String">	
		delete from LOGIN_INFO
		where
		ID=#{id}
	</delete>

	<select id="queryAll" resultMap="loginInfoMap">
		SELECT
		*
		from
		LOGIN_INFO
	</select>


</mapper>